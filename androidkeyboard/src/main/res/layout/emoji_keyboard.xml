<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/emoji_plane"
  android:layout_width="match_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  <com.snaps.workaholics_emojikeyboard.LatinKeyboardView
    android:id="@+id/keyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:keyPreviewLayout ="@layout/preview"
    android:keyBackground="@drawable/key_background"
    android:keyTextColor="@color/keyface_default"
    android:visibility="gone"
    />
   <LinearLayout
      android:id="@+id/emoji"
      android:layout_width="fill_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:background="@color/nav_background_default"
      android:layout_weight=".8">
   <ProgressBar
      android:id="@+id/progressbar_gifsend"
      style="?android:attr/progressBarStyleHorizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="15dp"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="10dp"
      android:visibility="gone" />
   <RadioGroup
      android:id="@+id/rdogrp_footer"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:gravity="center"
      android:orientation="horizontal"
      android:checkedButton="@+id/emoji_stickers" >
      <Button
        android:id="@+id/emoji_keyboard"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".20"
        android:textColor="@color/keyface_default"
        android:textSize="12sp"
        android:text="ABC"
        android:background="@color/transparent"
        android:button="@null"
        android:gravity="center" />
      <RadioButton
        android:id="@+id/emoji_small"
        android:checked="true"
        android:enabled="false"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".20"
        android:background="@drawable/icon_emoji"
        android:button="@null"
        android:gravity="center" />
     <RadioButton
        android:id="@+id/emoji_large"
        android:enabled="false"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".20"
        android:background="@drawable/icon_stickers"
        android:button="@null"
        android:gravity="center" />
     <RadioButton
        android:id="@+id/emoji_gif"
        android:enabled="false"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".20"
        android:background="@drawable/icon_gifs"
        android:button="@null"
        android:gravity="center" />
     <Button
        android:id="@+id/emoji_share"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".20"
        android:textColor="@color/keyface_default"
        android:textSize="12sp"
        android:background="@drawable/icon_share_icon"
        android:button="@null"
        android:gravity="center" />
    </RadioGroup>
  </LinearLayout>
  <LinearLayout
    android:id="@+id/gesture_layout"
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:orientation="horizontal"
    android:background="@color/keyboard_preview"
    android:layout_weight=".2">
	   <ProgressBar
      android:id="@+id/progressbar"
      style="?android:attr/progressBarStyleLarge"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_marginTop="40dp"
      android:layout_marginBottom="40dp"
      android:visibility="visible"
      android:indeterminateDrawable="@drawable/progress" />
	   <GridView
	    android:id="@+id/gridView1"
	    android:numColumns="auto_fit"
	    android:gravity="center"
	    android:background="@drawable/keyboard_background"
	    android:stretchMode="columnWidth"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:animateLayoutChanges="true"
	    android:visibility="gone">
			</GridView>
		</LinearLayout>
</LinearLayout>